{
  "name": "nextjs-starter",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "analyze": "turbo analyze",
    "e2e": "bunx cypress open --project ./apps/web-e2e",
    "test:e2e": "bunx cypress run --project ./apps/web-e2e",
    "test": "turbo web#test",
    "test:watch": "turbo web#test:watch",
    "clean": "rimraf apps/web/.next node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "gen": "bun x turbo gen",
    "prepare": "husky"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{jsx,js,ts,tsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "**/*.{html,json,css,scss,md,mdx}": [
      "prettier -w"
    ]
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.1.39",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@turbo/gen": "^2.4.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.0",
    "turbo": "^2.4.1",
    "typescript": "^5.7.3"
  }
}
